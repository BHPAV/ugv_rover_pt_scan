[Unit]
Description=UGV Rover PT ROS2 Bringup (Docker)
After=network-online.target docker.service
Wants=network-online.target docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/ugv_rover_pt_scan/docker
EnvironmentFile=/opt/ugv_rover_pt_scan/.env
ExecStart=/usr/bin/docker compose up -d --build
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
