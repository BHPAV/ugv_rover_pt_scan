# ROS
ROS_DOMAIN_ID=0

# Serial device to ESP32 (adjust to your Jetson)
UGV_SERIAL_PORT=/dev/ttyTHS1
UGV_SERIAL_BAUD=115200

# Camera device for v4l2_camera (adjust if needed)
UGV_CAMERA_DEVICE=/dev/video0
UGV_CAMERA_FPS=30
UGV_CAMERA_WIDTH=1280
UGV_CAMERA_HEIGHT=720

# Mission storage on Jetson (bind-mounted into container)
UGV_MISSION_ROOT=/data/missions

# NAS Offload (Tailscale)
NAS_HOST=box-nas
NAS_USER=rover_ingest
NAS_DEST_DIR=/share/rover_ingest/ugv_rover_pt/box-rover/
